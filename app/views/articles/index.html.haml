%h1 Listing articles

%table
  %tr
    %th Title
    %th Description
    %th Url
    %th Picture
    %th Feed
    %th
    %th
    %th

  - @articles.each do |article|
    %tr
      %td= article.title
      %td= article.summary
      %td= article.url
      %td= article.image
      %td= article.feed_id
      %td= link_to 'Show', article
      %td= link_to 'Edit', edit_article_path(article)
      %td= link_to 'Destroy', article, :method => :delete, :data => { :confirm => 'Are you sure?' }
      %td
        %button.bookmark-article{"data-id" => article.id}

%br

#recent_episodes
  %h3 TEST
  %ul
    - for entry in Article.all(:limit => 10, :order => "published desc")
      %li= link_to h(entry.image), entry.url

= link_to 'New Article', new_article_path
