= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :summary
    = f.text_area :summary
  .field
    = f.label :url
    = f.text_area :url
  .field
    = f.label :image
    = f.text_area :image
  .field
    = f.label :article_id
    = f.number_field :article_id
  .actions
    = f.submit 'Save'
